{{#if model.matured}}
<h4>成熟的块</h4>
<div class="table-responsive">
  <table class="table table-condensed table-striped">
    <thead>
      <tr>
        <th>高度</th>
        <th>块 Hash</th>
        <th>发现时间</th>
        <th>幸运度</th>
        <th>奖励</th>
      </tr>
    </thead>
    <tbody>
      {{#each model.matured as |block|}}
        {{partial "blocks/block"}}
      {{/each}}
    </tbody>
  </table>
</div>
{{else}}
<h3>没有成熟的块</h3>
{{/if}}
